<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MenuActivity">


    <ImageView
            android:layout_width="200dp"
            tools:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/imageView" android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:textSize="@android:dimen/notification_large_icon_width"
            tools:text="@string/app_name"
            android:id="@+id/tituloMenu"
            android:layout_below="@id/imageView"
    />
    <Button
            android:text="Nueva Partida"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloMenu"
            android:id="@+id/nuevapartida"
            android:layout_marginLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" style="@style/Widget.AppCompat.Button"
            android:background="@drawable/forma_lista_partidas"/>

    <Button
            android:text="Cargar Partida"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nuevapartida"
            android:layout_marginLeft="40dp"
            android:aligns
            android:id="@+id/cargarpartida"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    <Button
            android:text="Salir"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cargarpartida"
            android:layout_marginLeft="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/salir"
            android:layout_marginTop="30dp"/>
</RelativeLayout>
<android.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Ajustes generales">
        <EditTextPreference
                android:capitalize="words"
                android:defaultValue="@string/pref_default_display_name"
                android:inputType="textCapWords"
                android:key="display_name_text"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:title="Nombre del jugador" />

    </PreferenceCategory>
    <PreferenceCategory
            android:title="Ajustes del juego">
         <SwitchPreference
            android:defaultValue="true"
            android:key="music_switch"
            android:summary="Animar las jugadas con sonidos"
            android:title="Sonido" />

         <ListPreference
         android:defaultValue="Azul"
                android:entries="@array/tableros"
                android:entryValues="@array/tableros"
                android:key="color_tablero"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"
                android:title="Elige el color del tablero" />

        <ListPreference
                android:defaultValue="Rojo/Amarillo"
                android:entries="@array/fichas"
                android:entryValues="@array/fichas"
                android:key="color_fichas"
                android:negativeButtonText="@null"
                android:positiveButtonText="@null"
                android:title="Elige el color de las fichas" />

    </PreferenceCategory>
</android.preference.PreferenceScreen>
